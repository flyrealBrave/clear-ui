{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": false,
    "strict": true,
    "experimentalDecorators": true,
    "noErrorTruncation": true,
    "esModuleInterop": true
  },
  "exclude": [
    "**/build/",
    "node_modules",
    "dist",
    "build",
    "public",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}